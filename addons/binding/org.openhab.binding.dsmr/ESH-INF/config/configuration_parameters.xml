<?xml version="1.0" encoding="UTF-8"?>
<config-description:config-descriptions xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xmlns:config-description="http://eclipse.org/smarthome/schemas/config-description/v1.0.0"
	xsi:schemaLocation="http://eclipse.org/smarthome/schemas/config-description/v1.0.0 http://eclipse.org/smarthome/schemas/config-description-1.0.0.xsd">

	<config-description uri="binding:dsmr:bridgesettings">
		<parameter name="serialPort" type="text" required="true">
			<default></default>
			<label>Serial Port</label>
			<description>The Serial Port where the P1 port of the Smart Meter is connected (e.g. Linux: /dev/ttyUSB0, Windows: COM1)</description>
		</parameter>
        <parameter name="lenientMode" type="boolean" required="false">
            <default>false</default>
            <label>Lenient Mode</label>
            <description><![CDATA[ In lenient mode the binding will handle communication problems more silently. 
                If your experiencing lots of errors in the log and receive no data setting lenient mode to true could help.<br><br>
                Please note that receiving data is not steady (the communication problems are still there).<br><br>
                This option could be needed for embedded platforms and should not be needed if the platform fast enough. ]]></description>
        </parameter>
        <parameter name="autoDiscovery" type="boolean" required="true">
            <default>true</default>
            <label>Serial Port auto detection</label>
            <description><![CDATA[ Enable Serial Port speed auto detection.<br>
                DSMR V3 meters (or older) should work on 9600 7E1 where the newer meters (DSMR V4 and newer) work on 115200 8N1.<br>
                The autodetection will try both settings to in order to find the correct one. However some meters use non compliant settings.<br>
                In the situation auto detection fails please disable this option and set the baudrate, databits, parity and stop bits by your self. ]]></description>
            <advanced>true</advanced>
        </parameter>
		<parameter name="baudrate" type="decimal" required="false" multiple="false">
	       <default>115200</default>
	       <label>Baudrate</label>
	       <description>Set the baudrate of the specified Serial Port.</description>
	       <options>
		       <option value="9600">9600 (Mostly DSMR V3 or older)</option>
		       <option value="115200">115200 (Mostly DSMR V4 or newer)</option>
		       <option value="110">110</option>
		       <option value="300">300</option>
		       <option value="600">600</option>
		       <option value="1200">1200</option>
		       <option value="2400">2400</option>
		       <option value="4800">4800</option>
		       <option value="14400">14400</option>
		       <option value="19200">19200</option>
		       <option value="28800">28800</option>
		       <option value="38400">38400</option>
		       <option value="56000">56000</option>
		       <option value="57600">57600</option>
		       <option value="128000">128000</option>
		       <option value="153600">153600</option>
		       <option value="230400">230400</option>
		       <option value="256000">256000</option>
		       <option value="460800">460800</option>
		       <option value="912600">912600</option>
	       </options>
	       <advanced>true</advanced>
		</parameter>
        <parameter name="databits" type="decimal" required="false" multiple="false">
           <default>8</default>
           <label>Databits</label>
           <description>Number of databits</description>
           <options>
	           <option value="5">5</option>
	           <option value="6">6</option>
	           <option value="7">7</option>
	           <option value="8">8</option>
			</options>
			<advanced>true</advanced>
		</parameter>
		<parameter name="parity" type="text" required="false" multiple="false">
            <default>N</default>
            <label>Parity</label>
            <description>Set the parity bit</description>
            <options>
                <option value="N">None</option>
                <option value="O">Odd</option>
                <option value="E">Even</option>
                <option value="M">Mark</option>
                <option value="S">Space</option>
            </options>
            <advanced>true</advanced>
        </parameter>
        <parameter name="stopbits" type="text" required="false" multiple="false">
            <default>1</default>
            <label>Stopbits</label>
            <description>Set the number of stop bits</description>
            <options>
                <option value="1">1</option>
                <option value="1.5">1.5</option>
                <option value="2">2</option>
            </options>
            <advanced>true</advanced>
		</parameter>
	</config-description>
	<config-description uri="binding:dsmr:meterdescriptor">
		<parameter name="channel" type="decimal" required="true" readOnly="true">
			<advanced>true</advanced>
			<label>Channel</label>
			<description>The DSMR-device channel for this meter. This is a technical value filled by the binding. Users should not adapt this.</description>
		</parameter>
	</config-description>
</config-description:config-descriptions>
